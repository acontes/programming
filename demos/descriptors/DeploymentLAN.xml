<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 ../src/Extra/org/objectweb/proactive/extensions/gcmdeployment/schema/ExtensionSchemas.xsd	">

	<environment>
		<descriptorVariable name="HOST" value="paquito subzero sgouirk dalmatie macondo nyx pollux" />
		<javaPropertyVariable name="user.dir" />
	</environment>

	<resources>
		<group refid="lan">
			<host refid="host" />
		</group>
	</resources>

	<infrastructure>

		<hosts>
			<host id="host" os="unix">
				<homeDirectory base="root" relpath="${user.dir}" />
			</host>
		</hosts>

		<groups>
			<sshGroup id="lan" hostList="${HOST}" />
		</groups>


	</infrastructure>
</GCMDeployment>
