log4j.appender.FILE=org.apache.log4j.FileAppender
# by default, log into a file in the ~/.proactive directory
log4j.appender.FILE.File=${user.home}/.proactive/geronimo.log
# the following is for JBoss
# log4j.appender.FILE.File=${jboss.home}/server/${jboss.domain}/log/proactive.log
# the following is for GlassFish
# log4j.appender.FILE.File=${glassfish.home}/domains/proactive/logs/proactive.log
# the following is for Geronimo AS
# log4j.appender.FILE.File=${geronimo.home}/var/log/proactive.log
# the following is for JOnAs AS
# log4j.appender.FILE.File=${jonas.base}/logs/proactive.log

# the following recreates a file for each run
log4j.appender.FILE.Append=true
log4j.appender.FILE.threshold=DEBUG
# Appender FILE uses the PatternLayout.
log4j.appender.FILE.layout=org.apache.log4j.PatternLayout
# %X{hostname} adds the hostname
# %X{runtime} adds the runtime url
log4j.appender.FILE.layout.ConversionPattern==%d= %5p [%t] %C: %m%n


log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
# %X{hostname} adds the hostname
# %X{runtime} adds the runtime url
#log4j.appender.CONSOLE.layout.ConversionPattern=%n%X{runtime} - [%20.20c{2}] %m
log4j.appender.CONSOLE.layout.ConversionPattern=%5p [%t]: %m%n
