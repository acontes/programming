<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="DescriptorSchema.xsd">
	<componentDefinition>
	   <virtualNodesDefinition>
	     <virtualNode name="MiniVN"/>
	   </virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="MiniVN">
				<jvmSet>
					<currentJVM protocol="http"/>
					<vmName value="JVMlocal"/>
					<vmName value="JVMrsh-sand"/>
					<vmName value="JVMrsh-tuba"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="JVMlocal">
				<creation>
                    <processReference refid="PROCESSlocal"/>
                </creation>
            </jvm>
			<jvm name="JVMrsh-sand">
				<creation>
					<processReference refid="PROCESSrsh-sand"/>
				</creation>
			</jvm>
			<jvm name="JVMrsh-tuba">
				<creation>
					<processReference refid="PROCESSrsh-tuba"/>
				</creation>
			</jvm>
			
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="PROCESSlocal">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"/>
			</processDefinition>
			<processDefinition id="PROCESSrsh-sand">
				<rshProcess class="org.objectweb.proactive.core.process.rsh.RSHJVMProcess" hostname="sand.inria.fr">
					<processReference refid="PROCESSlocal"/>
				</rshProcess>
			</processDefinition>
			<processDefinition id="PROCESSrsh-tuba">
				<rshProcess class="org.objectweb.proactive.core.process.rsh.RSHJVMProcess" hostname="tuba.inria.fr">
					<processReference refid="PROCESSlocal"/>
				</rshProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
