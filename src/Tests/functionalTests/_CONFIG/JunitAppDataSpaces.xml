<?xml version="1.0" encoding="UTF-8"?>
<GCMApplication
	xmlns="urn:gcm:application:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:application:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ApplicationDescriptorSchema.xsd">

	<environment>
		<javaPropertyVariable name="proactive.home"/>
		<javaPropertyVariable name="java.home"/>

		<descriptorDefaultVariable name="deploymentDescriptor" value="localhost/dataSpaces.xml" />
		<descriptorDefaultVariable name="jvmargDefinedByTest" value=" "/>
		<programVariable name="JVM_PARAMETERS"/>
		<programVariable name="NAMING_SERVICE_URL"/>
		<programVariable name="INPUT_DEFAULT_PATH"/>
		<programVariable name="INPUT_PATH"/>
		<programVariable name="OUTPUT_DEFAULT_PATH"/>
		<programVariable name="OUTPUT_PATH"/>
	</environment>
	
	<application>
		
		<proactive relpath="${proactive.home}" base="root">
			<configuration>
				<java base="root" relpath="${java.home}/bin/java"/>		
				<jvmarg value="${JVM_PARAMETERS}"/>
				<jvmarg value="${jvmargDefinedByTest}"/>
				<jvmarg value="-Dclover.initstring=${proactive.home}/compile/ProActiveCoverage.db"/>
				<proactiveClasspath type="append">
					<pathElement base="proactive" relpath="classes/Tests"/>
					<pathElement base="proactive" relpath="dist/lib/clover.jar"/>
					<pathElement base="proactive" relpath="dist/lib/ibis-1.4.jar"/>
				</proactiveClasspath>	
<!--				<log4jProperties base="proactive" relpath="compile/proactive-log4j"/> -->
		      <!--   <proactiveSecurity>
		          <applicationPolicy base="proactive" relpath="descriptors/security/applicationPolicy1.xml"/>
		          <runtimePolicy base="proactive" relpath="descriptors/security/applicationPolicy1.xml"/>
		       </proactiveSecurity> -->
			</configuration>
			
			<virtualNode id="nodes">
				<nodeProvider refid="remote" />
			</virtualNode>
			<data>
				<namingService url="${NAMING_SERVICE_URL}" />
				<!-- URLs are paths here; it works for VFS, but it is like that just for local testing -->
				<inputDefault>
					<remoteAccess url="${INPUT_DEFAULT_PATH}" />
					<!--  difficult to test locally:
					<location hostname="${INPUT_DEFAULT_HOSTNAME}" url="${INPUT_DEFAULT_PATH}" />  -->
				</inputDefault>
				<input id="named_input">
					<remoteAccess url="${INPUT_PATH}" />
				</input>
				<outputDefault>
					<remoteAccess url="${OUTPUT_DEFAULT_PATH}" />
				</outputDefault>
				<output id="named_output">
					<remoteAccess url="${OUTPUT_PATH}" />
				</output>
			</data>
		</proactive>
	</application>

	<resources>	
		<nodeProvider id="remote">
			<file path="${deploymentDescriptor}"/>
		</nodeProvider>
	</resources>
</GCMApplication>
