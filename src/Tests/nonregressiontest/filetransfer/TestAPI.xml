<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor schemaVersion="3.3" xmlns="http://www-sop.inria.fr/oasis/ProActive/schemas/DescriptorSchema.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www-sop.inria.fr/oasis/ProActive/schemas/DescriptorSchema.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="test"/>
			<virtualNode name="testPush" />
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="test">
				<jvmSet>
					<vmName value="JvmNode"/>
				</jvmSet>
			</map>
			<map virtualNode="testPush">
				<jvmSet>
					<vmName value="JvmNodePush"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="JvmNode">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
			<jvm name="JvmNodePush">
				<creation>
					<processReference refid="localJVMPush"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="localJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"/>
			</processDefinition>	
			<processDefinition id="localJVMPush">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"/>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>