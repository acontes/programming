<?xml version="1.0" encoding="UTF-8"?>
<GCMApplication
	xmlns="urn:gcm:application:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:application:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ApplicationDescriptorSchema.xsd">

	<environment>
		<javaPropertyVariable name="proactive.home"/>
		<javaPropertyVariable name="java.home"/>

		<programVariable name="router.address"/>
		<programVariable name="router.port"/>

		<descriptorDefaultVariable name="tmpDir" value=" "/>
		<descriptorDefaultVariable name="instances" value=" "/>
	</environment>
	
	<application>
		<proactive base="root" relpath="${proactive.home}">
			<configuration>
				<jvmarg value="-Dproactive.net.router.address=${router.address} -Dproactive.net.router.port=${router.port}"/>
				<jvmarg value="-Dproactive.test=true"/>
				<jvmarg value="-Dproactive.communication.protocol=pamr"/>
			</configuration>
			
			<virtualNode id="vn"/>
		</proactive>
	</application>
	
	<resources>	
		<nodeProvider id="nodeProvider">
			<file path="gcmd.xml"/>
		</nodeProvider>
	</resources>
</GCMApplication>
