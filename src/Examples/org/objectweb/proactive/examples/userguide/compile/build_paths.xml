   <property name="tutorial.cmagent.synch" value="${base.dir}/src/Examples/org/objectweb/proactive/examples/userguide/cmagent/synch/" />
   <property name="tutorial.cmagent.migration" value="${base.dir}/src/Examples/org/objectweb/proactive/examples/userguide/cmagent/migration/" />
   <property name="tutorial.cmagent.groups" value="${base.dir}/src/Examples/org/objectweb/proactive/examples/userguide/cmagent/groups/" />
   <property name="tutorial.cmagent.webservice" value="${base.dir}/src/Examples/org/objectweb/proactive/examples/userguide/cmagent/webservice/" />

   <!-- Primality Test Tutorial -->
   <property name="tutorial.primes.sequential" value="${base.dir}/src/Examples/org/objectweb/proactive/examples/userguide/primes/sequential/" />
   <property name="tutorial.primes.distributed" value="${base.dir}/src/Examples/org/objectweb/proactive/examples/userguide/primes/distributed/" />
