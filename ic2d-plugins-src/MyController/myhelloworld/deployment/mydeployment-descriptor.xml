<ProActiveDescriptor xmlns="urn:proactive:deployment:3.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="DescriptorSchema.xsd">


	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="myapplication-node" />
			<virtualNode name="server-node" />
			<virtualNode name="client-node" />
		</virtualNodesDefinition>
	</componentDefinition>

	<deployment>

		<mapping>
			<map virtualNode="myapplication-node">
				<jvmSet>
					<vmName value="MyApplicationJvm" />
				</jvmSet>
			</map>
			<map virtualNode="server-node">
				<jvmSet>
					<vmName value="ServerJvm" />
				</jvmSet>
			</map>
			<map virtualNode="client-node">
				<jvmSet>
					<vmName value="ClientJvm" />
				</jvmSet>
			</map>
		</mapping>

		<jvms>
			<jvm name="MyApplicationJvm">
				<creation>
					<processReference refid="linuxJVM1" />
				</creation>
			</jvm>

			<jvm name="ServerJvm">
				<creation>
					<processReference refid="linuxJVM1" />
				</creation>
			</jvm>

			<jvm name="ClientJvm">
				<creation>
					<processReference refid="linuxJVM1" />
				</creation>
			</jvm>

		</jvms>

	</deployment>


