	</variables>

	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="vn" timeout="180000" />
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="vn">
