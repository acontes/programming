<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor
	xmlns="urn:proactive:deployment:3.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:proactive:deployment:3.3 http://www-sop.inria.fr/oasis/ProActive/schemas/deployment/3.3/deployment.xsd">
	<variables>
		<descriptorVariable name="PROACTIVE_HOME" value="/user/vcave/home/dev/workspaces/inria/proactive.clean/proactive.mpi" />	
	</variables>	
	<componentDefinition>
		<virtualNodesDefinition>
 			<virtualNode name="poisson3d-2" />
			<virtualNode name="poisson3d-1" />

		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="poisson3d-1">
				<jvmSet>
					<vmName value="Jvm1" />
					<vmName value="Jvm3" />					
				</jvmSet>
			</map>
			<map virtualNode="poisson3d-2">
			
				<jvmSet>
					<vmName value="Jvm2" />			
					<vmName value="Jvm4" />					
				</jvmSet>
			</map>		 
		</mapping>
		<jvms>
			<jvm name="Jvm1">
				<creation>
					<processReference refid="dpsLocalProcess" />
	
				</creation>
			</jvm>
			<jvm name="Jvm3">
				<creation>
					<processReference refid="ssh_pincoya" />
				</creation>
			</jvm>
			<jvm name="Jvm2">
				<creation>
					<processReference refid="ssh_anaconda" />
				</creation>
			</jvm>
			<jvm name="Jvm4">
				<creation>
					<processReference refid="ssh_nyx" />
				</creation>
			</jvm>			
		</jvms>
	</deployment>

	<infrastructure>
		<processes>
			<processDefinition id="localJVM">
				<jvmProcess
					class="org.objectweb.proactive.core.process.JVMNodeProcess">
										<classpath>
						<absolutePath
							value="/${PROACTIVE_HOME}/lib/log4j.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/lib/components/fractal.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/lib/xercesImpl.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/lib/bouncycastle.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/lib/ganymed-ssh2-build210.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/lib/javassist.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/classes/Core" />
						<absolutePath
							value="${PROACTIVE_HOME}/classes/Examples" />
						<absolutePath
							value="${PROACTIVE_HOME}/classes/Extensions" />
						<absolutePath
							value="${PROACTIVE_HOME}/classes/Extra" />
						<absolutePath
							value="${PROACTIVE_HOME}/classes/Tests" />																					
						<absolutePath
							value="${PROACTIVE_HOME}/classes/Utils" />
					</classpath>
					<jvmParameters>
						<parameter
							value="-Dproactive.useIPaddress=true" />
						<parameter value="-Dproactive.rmi.port=6099" />
						<parameter value="-Djava.library.path=/user/vcave/home/dev/workspaces/inria/proactive.clean/proactive.mpi/classes/Core/org/objectweb/proactive/mpi/control" />
						<parameter value="-Dsun.rmi.server.exceptionTrace=true" />
					</jvmParameters>
				</jvmProcess>
			</processDefinition>

			<!-- MPI PROCESSES -->
			<processDefinition id="mpiPoisson3dProcess1">
				<mpiProcess
					class="org.objectweb.proactive.core.process.mpi.MPIDependentProcess"					
					mpiFileName="myvalgrind "
					hostsFileName="/user/vcave/home/machineFile1"
					mpiCommandOptions="--tool=memcheck /user/vcave/home/dev/workspaces/inria/proactive.clean/proactive.mpi/src/Examples/org/objectweb/proactive/examples/mpi/proactive_poisson3d_sliced/proactive_poisson3D_Sliced 20 20 20 1000 4 2">
					<commandPath value="/user/vcave/home/dev/bin/mpich2-install/bin/mpiexec" />
					<mpiOptions>
						<processNumber>2</processNumber>
						<localRelativePath>
							<relativePath origin="user.dir"
								value="../../src/Examples/org/objectweb/proactive/examples/mpi/proactive_poisson3d_sliced" />
						</localRelativePath>
	<!-- 				<remoteAbsolutePath>
			                <absolutePath value="/user/vcave/home/dev/workspaces/inria/proactive.clean/proactive.mpi/scripts/unix"/>
            			</remoteAbsolutePath>
-->
					</mpiOptions>
				</mpiProcess>
			</processDefinition>

			<processDefinition id="mpiPoisson3dProcess2">
				<mpiProcess
					class="org.objectweb.proactive.core.process.mpi.MPIDependentProcess"
					mpiFileName="myvalgrind "
					hostsFileName="/user/vcave/home/machineFile2"
					mpiCommandOptions="--tool=memcheck /user/vcave/home/dev/workspaces/inria/proactive.clean/proactive.mpi/src/Examples/org/objectweb/proactive/examples/mpi/proactive_poisson3d_sliced/proactive_poisson3D_Sliced 20 20 20 1000 4 2">
					<commandPath value="/user/vcave/home/dev/bin/mpich2-install/bin/mpiexec" />
					<mpiOptions>
						<processNumber>2</processNumber>
						<localRelativePath>
							<relativePath origin="user.dir"
								value="../../src/Examples/org/objectweb/proactive/examples/mpi/proactive_poisson3d_sliced" />
						</localRelativePath>
<!--   						<remoteAbsolutePath>
			                <absolutePath value="/user/vcave/home/dev/workspaces/inria/proactive.clean/proactive.mpi/scripts/unix"/>
            			</remoteAbsolutePath> -->
					</mpiOptions>
				</mpiProcess>
			</processDefinition>

			<!-- DEPENDENT PROCESSES -->
			<processDefinition id="dpsLocalProcess">
				<dependentProcessSequence
					class="org.objectweb.proactive.core.process.DependentListProcess">
					<processReference refid="localJVM" />
					<processReference refid="mpiPoisson3dProcess1" />			
				</dependentProcessSequence>
			</processDefinition>

			<processDefinition id="dpsLocalProcess2">
				<dependentProcessSequence
					class="org.objectweb.proactive.core.process.DependentListProcess">
					<processReference refid="localJVM" />
					<processReference refid="mpiPoisson3dProcess2" />
				</dependentProcessSequence>
			</processDefinition>
			 
			<processDefinition id="ssh_pincoya">
				<sshProcess
					class="org.objectweb.proactive.core.process.ssh.SSHProcess"
					hostname="pincoya.inria.fr">
					<processReference refid="dpsLocalProcess"></processReference>
				</sshProcess>
			</processDefinition>
			
			<processDefinition id="ssh_anaconda">
				<sshProcess
					class="org.objectweb.proactive.core.process.ssh.SSHProcess"
					hostname="anaconda.inria.fr">
					<processReference refid="dpsLocalProcess2"></processReference>
				</sshProcess>
			</processDefinition>			

			<processDefinition id="ssh_nyx">
				<sshProcess
					class="org.objectweb.proactive.core.process.ssh.SSHProcess"
					hostname="nyx.inria.fr">
					<processReference refid="dpsLocalProcess2"></processReference>
				</sshProcess>
			</processDefinition>				
		</processes>
	</infrastructure>
</ProActiveDescriptor>
