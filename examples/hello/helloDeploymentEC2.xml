<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ExtensionSchemas.xsd	">

	<environment>
		<!-- CHANGE THIS -->
		<descriptorVariable name="HOST" value="localhost" />
		<javaPropertyDescriptorDefault name="os" value="windows" />
		<javaPropertyVariable name="user.dir" />
	</environment>

	<resources>
		<group refid="remoteEC2">
			<host refid="host" />
		</group>
	</resources>

	<infrastructure>

		<hosts>
			<host id="host" os="${os}" hostCapacity="1" vmCapacity="1">
				<homeDirectory base="root" relpath="${user.dir}" />
			</host>

		</hosts>

		<groups>
			<ec2Group id="remoteEC2">
				<imageId>ami-3bd63252</imageId> 
				<accessKeyId>1K6JVRSE482QZZ8N7302</accessKeyId>
				<secretAccessKey>JRJxPd2RcWjPCaBbtfjsY71vf8VryHl0ikLunhoj</secretAccessKey>
			</ec2Group>				
		</groups>


	</infrastructure>
</GCMDeployment>
