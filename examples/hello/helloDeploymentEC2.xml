<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment xmlns="urn:gcm:deployment:1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 /home/glaurent/workspace/amazon_ec2_integration/src/Extensions/org/objectweb/proactive/extensions/gcmdeployment/schema/ExtensionSchemas.xsd">

	<environment>
		<javaPropertyVariable name="user.dir" />
		<javaPropertyVariable name="ec2.accessKeyId" />
		<javaPropertyVariable name="ec2.secretAccessKey" />
		<javaPropertyDescriptorDefault name="os" value="windows" />
	</environment>

	<resources>
		<group refid="ec2test">
			<host refid="dummy" />
		</group>
	</resources>

	<infrastructure>

		<groups>
			<ec2Group id="ec2test">
				<imageId>ami-60a54009</imageId> <!-- change this to new image -->
				<accessKeyId>${ec2.accessKeyId}</accessKeyId>
				<secretAccessKey>${ec2.secretAccessKey}</secretAccessKey>
			</ec2Group>
		</groups>

		<hosts>
			<host id="dummy" os="unix" hostCapacity="2" vmCapacity="2">
				<homeDirectory base="root" relpath="dummy" />
			</host>
		</hosts>

	</infrastructure>
</GCMDeployment>
