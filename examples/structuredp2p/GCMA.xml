<?xml version="1.0" encoding="utf-8"?>
<GCMApplication xmlns="urn:gcm:application:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:application:1.0
                                    http://proactive.inria.fr/schemas/gcm/1.0/ApplicationDescriptorSchema.xsd">

	<environment>
		<javaPropertyVariable name="java.home" />
		<javaPropertyVariable name="proactive.home" />
		<javaPropertyVariable name="user.home" />
		<javaPropertyVariable name="descriptor.peers" />
		<javaPropertyVariable name="descriptor.trackers" />

		<descriptorVariable name="hostCapacity" value="1" />
		<descriptorVariable name="vmCapacity" value="1" />
	</environment>

	<application>
		<proactive base="root" relpath="${proactive.home}">

			<configuration>
				<java base="root" relpath="${java.home}/bin/java" />

				<applicationClasspath>
					<pathElement base="proactive" relpath="dist/lib/openrdf-sesame-onejar.jar" />
					<pathElement base="proactive" relpath="dist/lib/owlim-big-3.1.0.jar" />
					<pathElement base="proactive" relpath="dist/lib/ProActive_examples.jar" />
					<pathElement base="proactive" relpath="dist/lib/ibis-1.4.jar" />
					<pathElement base="proactive" relpath="dist/lib/ibis-connect-1.0.jar" />
					<pathElement base="proactive" relpath="dist/lib/ibis-util-1.0.jar" />
				</applicationClasspath>

			</configuration>

			<virtualNode id="Peer" capacity="1">
				<nodeProvider refid="Peer" />
			</virtualNode>
			<virtualNode id="Tracker" capacity="1">
				<nodeProvider refid="Tracker" />
			</virtualNode>
		</proactive>
	</application>

	<resources>
		<nodeProvider id="Peer">
			<file path="${descriptor.peers}" />
		</nodeProvider>
		<nodeProvider id="Tracker">
			<file path="${descriptor.trackers}" />
		</nodeProvider>
	</resources>

</GCMApplication>
