		<includePropertyFile location="${PROACTIVE_HOME}/descriptors/nodes.properties"/>
		
		<descriptorVariable name="JAVA_HOME"
			value="/home/sophia/cdalmasso/pub/local/jdk1.6.0_06/" />
		<!-- Path of the remote JVM , CHANGE ME!!!! /user/cdalmass/home/pub/local/jdk1.5.0_09/ -->
	</variables>
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="matrixNode" property="multiple" timeout="160000"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="matrixNode">
				<jvmSet>
					<!--					<currentJVM />-->
					<!--					<vmName value="jvm1" />-->
					<vmName value="sophia" />
				</jvmSet>
			</map>
		</mapping>
		<jvms>
