<!--				    <processReference refid="SSHsophia" />-->
					<processReference refid="sshProcessList1" />
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="jvmProcess">
				<jvmProcess
					class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<classpath>
						<!-- <absolutePath value="${PROACTIVE_HOME}/bin" />-->
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/ProActive.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/bouncycastle.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/fractal.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/log4j.jar" />
							
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/fractal-adl.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/dtdparser.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/asm-2.2.1.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/javassist.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/julia-asm.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/julia-mixins.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/julia-runtime.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/ow_deployment_scheduling.jar"/>
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/ProActive_examples.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/dist/lib/xercesImpl.jar" />
					</classpath>
					<javaPath>
						<absolutePath value="${JAVA_HOME}/bin/java" />
					</javaPath>
					<jvmParameters><parameter value="-Dproactive.net.interface=eth0"/></jvmParameters>
					<policyFile>
						<absolutePath
							value="${PROACTIVE_HOME}/scripts/proactive.java.policy" />
					</policyFile>
					<log4jpropertiesFile>
						<absolutePath
							value="${PROACTIVE_HOME}/scripts/proactive-log4j" />
					</log4jpropertiesFile>
				</jvmProcess>
			</processDefinition>
			
<!--			<processDefinition id='rshProcess'>-->
