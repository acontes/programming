<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.objectweb.proactive.ic2d.launcher.perspectives.LauncherPerspective"
            fixed="true"
            icon="icons/perspective.gif"
            id="org.objectweb.proactive.ic2d.launcher.perspectives.LauncherPerspective"
            name="Launcher"/>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.objectweb.proactive.ic2d.launcher.actionSet1"
            label="File Action Set"
            visible="true">
         <menu
               id="org.objectweb.proactive.ic2d.launcher.Menu"
               label="&amp;Launcher"/>
         <action
               class="org.objectweb.proactive.ic2d.launcher.actions.OpenFile"
               definitionId="org.objectweb.proactive.ic2d.launcher.actions.OpenFile"
               icon="icons/open.gif"
               id="org.objectweb.proactive.ic2d.launcher.actions.OpenFile"
               label="&amp;Open an XML file"
               menubarPath="org.objectweb.proactive.ic2d.launcher.Menu/content"
               state="true"
               style="push"
               toolbarPath="org.eclipse.ui.workbench.file/open.ext"
               tooltip="Open an XML descriptor"/>
         <action
               class="org.objectweb.proactive.ic2d.launcher.actions.Launch"
               definitionId="org.objectweb.proactive.ic2d.launcher.actions.Launch"
               icon="src/org/objectweb/proactive/ic2d/launcher/views/launch.gif"
               id="org.objectweb.proactive.ic2d.launcher.actions.Launch"
               label="&amp;Launch the application"
               menubarPath="org.objectweb.proactive.ic2d.launcher.Menu/content"
               state="true"
               style="push"
               toolbarPath="org.eclipse.ui.workbench.file/launch.ext"
               tooltip="Launch the application"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.objectweb.proactive.ic2d.launcher.editors.xml.XMLEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="toto"
            icon="icons/text.gif"
            id="org.objectweb.proactive.ic2d.launcher.editors.xml.XMLEditor"
            name="XML Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.objectweb.proactive.ic2d.launcher.categories.Launcher"
            name="Launcher"/>
      <view
            allowMultiple="false"
            category="org.objectweb.proactive.ic2d.launcher.categories.Launcher"
            class="org.objectweb.proactive.ic2d.launcher.views.InfoView"
            id="org.objectweb.proactive.ic2d.launcher.views.InfoView"
            name="Activated Applications"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.objectweb.proactive.ic2d.launcher.perspectiveExtension1">
         <view
               id="org.objectweb.proactive.ic2d.launcher.views.InfoView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"
               visible="true"/>
      </perspectiveExtension>
   </extension>
</plugin>
