<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.objectweb.proactive.ic2d.monitoring"
   name="IC2D Monitoring Plug-in"
   version="1.0.0"

   >

   <runtime>
      <library name="Appli1.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.draw2d"/>
   </requires>
   <extension
         id="appli.perspectives"
         name="Perspectives"
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.objectweb.proactive.ic2d.monitoring.perspectives.MonitoringPerspective"
            id="org.objectweb.proactive.ic2d.monitoring.perspectives.MonitoringPerspective"
            name="Monitoring"/>
   </extension>
   <extension
         id="appli.vews"
         name="Views"
         point="org.eclipse.ui.views">
      <category
            id="appli.views"
            name="Appli1Views"/>
      <view
            category="appli.views"
            class="org.objectweb.proactive.ic2d.monitoring.views.MonitoringView"
            id="org.objectweb.proactive.ic2d.monitoring.views.MonitoringView"
            name="Monitoring"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.objectweb.proactive.ic2d.monitoring.perspectives.MonitoringPerspective">
         <actionSet id="appli.actions.defaultActionSet"/>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="appli.actions.defaultActionSet"
            label="Test actionSet"
            visible="false">
         <menu
               id="appli.file.workbenchMenu"
               label="&amp;Appli"
               path="additions">
            <groupMarker name="content"/>
         </menu>
         <action
               class="appli.actions.TestActionDelegate"
               id="appli.file.Test"
               label="Test"
               menubarPath="appli.file.workbenchMenu/content"
               style="push"
               tooltip="Exits the program"/>
      </actionSet>
   </extension>

</plugin>
