<?xml version="1.0" encoding="UTF-8"?>
<connector id="Connector_ID" version="1.5" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/connector_1_5.xsd"> 
	
	<description>Resource Adapter for the ProActive Scheduler</description>
	<display-name>Proactive Scheduler Resource Adapter</display-name>
 	<vendor-name>ProActive</vendor-name>
  	<eis-type>ProActive adapter</eis-type>
  	<resourceadapter-version>5.0</resourceadapter-version>                                  
 
	<resourceadapter>
  	    <resourceadapter-class>org.objectweb.proactive.extra.javaee.scheduler.SchedulerResourceAdapter</resourceadapter-class>
  	    <config-property>
			<config-property-name>schedulerURL</config-property-name>
			<config-property-type>java.lang.String</config-property-type>
			<config-property-value>//localhost/SCHEDULER</config-property-value>
	    </config-property>
		<config-property>
			<config-property-name>username</config-property-name>
			<config-property-type>java.lang.String</config-property-type>
			<config-property-value>jl</config-property-value>
	    </config-property>
		<config-property>
			<config-property-name>password</config-property-name>
			<config-property-type>java.lang.String</config-property-type>
			<config-property-value>jl</config-property-value>
	    </config-property>
		<config-property>
			<config-property-name>jndiName</config-property-name>
			<config-property-type>java.lang.String</config-property-type>
			<config-property-value>proactivescheduler</config-property-value>
	    </config-property>

  	</resourceadapter>
  	
</connector>
