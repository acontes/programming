<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor schemaVersion="3.3" xmlns="http://www-sop.inria.fr/oasis/ProActive/schemas/DescriptorSchema.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www-sop.inria.fr/oasis/ProActive/schemas/DescriptorSchema.xsd">
        <variables>
		<descriptorVariable name="PROACTIVE_HOME" value="ProActive_RELEASE"/>
		<descriptorVariable name="REMOTE_HOME" value="/user/amangin/home"/>
		<descriptorVariable name="SCILAB_HOME" value="scilab-4.0"/>
	        <descriptorVariable name="SCILAB_HOME0" value="scilab0"/>
	        <descriptorVariable name="SCILAB_HOME1" value="scilab1"/>
	        <descriptorVariable name="SCILAB_HOME2" value="scilab2"/>
	</variables>
        <componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="ScilabVN" property="multiple"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="ScilabVN">
				<jvmSet>
                                        <vmName value="Jvm0"/>
                                      <!--  <vmName value="Jvm1"/>
					<vmName value="Jvm2"/> -->
				</jvmSet>
			</map>
		</mapping>
		<jvms>
	                <jvm name="Jvm0">
				<creation>
					<processReference refid="rsh_predadab0"/> 
				</creation>
			</jvm>
			<jvm name="Jvm1">
				<creation>
					<processReference refid="rsh_predadab1"/> 
				</creation>
			</jvm>
			<jvm name="Jvm2">
				<creation>
                                 	<processReference refid="rsh_predadab2"/> 
				</creation>
			</jvm>
		</jvms>
	</deployment>
        <fileTransferDefinitions>
              <fileTransfer id="ScilabTransfer0">
                    <dir src="${SCILAB_HOME}" dest="${SCILAB_HOME0}"/>
              </fileTransfer>
        </fileTransferDefinitions>
        <fileTransferDefinitions>
              <fileTransfer id="ScilabTransfer1">
                    <dir src="${SCILAB_HOME}" dest="${SCILAB_HOME1}"/>
              </fileTransfer>
        </fileTransferDefinitions>
        <fileTransferDefinitions>
              <fileTransfer id="ScilabTransfer2">
                    <dir src="${SCILAB_HOME}" dest="${SCILAB_HOME2}"/>
              </fileTransfer>
        </fileTransferDefinitions>

	<infrastructure>
		<processes>
			<processDefinition id="scilabJVM">
			    <jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
