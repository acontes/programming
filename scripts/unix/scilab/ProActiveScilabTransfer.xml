				   <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/lib/log4j.jar" />
				   <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/lib/components/fractal.jar" />
				   <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/lib/xercesImpl.jar" />
				   <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/lib/bouncycastle.jar" />
				   <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/lib/jsch.jar" />
				   <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/lib/javassist.jar" />
				   <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/classes"/>
                                   <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/lib/scilab/javasci.jar" />
                               </classpath>
                               <javaPath>
                                   <absolutePath value="/user/gchazara/home/NOSAVE/java/jvm/bin/java" />
                               </javaPath>
                               <policyFile>
                                   <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/scripts/proactive.java.policy" />
                                </policyFile>
                                <log4jpropertiesFile>
				    <absolutePath value="${REMOTE_HOME}/${PROACTIVE_HOME}/scripts/proactive-log4j" />
				</log4jpropertiesFile>
                              </jvmProcess>
			</processDefinition>
                         <processDefinition id="rsh_predadab0">
                            <rshProcess class="org.objectweb.proactive.core.process.rsh.RSHProcess" hostname="predadab">
                               <environment>
                                    <variable name="SCIDIR" value="${REMOTE_HOME}/${SCILAB_HOME0}"/>
                                    <variable name="SCI" value="${REMOTE_HOME}/${SCILAB_HOME0}"/>
                                    <variable name="LD_LIBRARY_PATH" value="${REMOTE_HOME}/${SCILAB_HOME0}/bin"/>
                                </environment>
                               <processReference refid="scilabJVM"/>
                               <fileTransferDeploy refid="ScilabTransfer0">
                                    <copyProtocol>rcp</copyProtocol>
                                    <sourceInfo prefix="${REMOTE_HOME}" />
                                    <destinationInfo prefix="${REMOTE_HOME}"/>
                               </fileTransferDeploy>
                           </rshProcess>
                       </processDefinition>
			<processDefinition id="rsh_predadab1">
                            <rshProcess class="org.objectweb.proactive.core.process.rsh.RSHProcess" hostname="predadab">
